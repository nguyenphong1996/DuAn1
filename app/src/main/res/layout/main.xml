<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#E0D3D3"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="500dp"
        android:layout_height="500dp"
        android:src="@drawable/circle_240"
        tools:layout_editor_absoluteX="-45dp"
        tools:layout_editor_absoluteY="-250dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="-430dp"
        android:layout_marginTop="-230dp"
        android:src="@drawable/local"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginTop="-225dp"
        android:text="Công viên phần mềm quang trung, quận 12, TP.HCM"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="180dp"
        android:background="@drawable/momo"
        android:orientation="vertical"
        android:padding="16dp"
        tools:layout_editor_absoluteX="26dp"
        tools:layout_editor_absoluteY="59dp"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:background="@drawable/rounded_corner"
        android:orientation="horizontal"
        android:layout_margin="1dp"
        android:padding="16dp"
        tools:layout_editor_absoluteX="26dp"
        tools:layout_editor_absoluteY="250dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:padding="8dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgGiatUi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/giatui"/>
            <TextView
                android:id="@+id/tvGiatUi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tạo đơn giặt ùi"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:padding="8dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgDatLich"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/datlich"/>
            <TextView
                android:id="@+id/tvDatLich"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đặt lịch giao nhận"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:padding="8dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgTraCuu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/tracuu"/>
            <TextView
                android:id="@+id/tvTraCuu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tra cứu dịch vụ"
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:padding="8dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgGiaoHang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/giaohang"/>
            <TextView
                android:id="@+id/tvGiaoHang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tạo đơn giặt ùi"
        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>